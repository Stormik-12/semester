<?xml version="1.0" encoding="UTF-8"?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chatclient.controllers.ChatController">
    <center>
        <TextArea fx:id="chatArea" editable="false"/>
    </center>
    <bottom>
        <HBox spacing="10">
            <TextField fx:id="messageField" promptText="Type a message..." HBox.hgrow="ALWAYS"/>
            <Button text="Send" onAction="#sendMessage"/>
        </HBox>
    </bottom>
    <left>
        <ListView fx:id="userList"/>
    </left>
</BorderPane>